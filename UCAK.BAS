10 'UCAK PROGRAMI
20 DIM PE$(5)
30 DEFINT R,M,I,J,X,Y
40 SCREEN 2
50 CLS
60 'PERVANENIN GORUNTU KISMI
70 PE$(1)="NU15 ND15"
80 PE$(2)="NH13 NF13"
90 PE$(3)="NL24 NR24"
100 PE$(4)="NG13 NE13"
110 MX=600:MY=50:R%=600:P%=50
120 'UCAK MERKEZININ HAREKET ETTIRILMESI
130 FOR M=1 TO 20 STEP .5
140 MX=MX-M:MY=MY+M:R%=R%-.5:P%=P%+.5
150 LINE(MX,MY)-(R%,P%),3
160 'UCAGIN INDIRILMESI
170 GOR%=1:GOSUB 1000
180 PSET(MX,MY),0
190 FOR I=1 TO 5
200 FOR J=1 TO 4
210 DRAW"C1;S=M;XPE$(J);"
220 DRAW"C0;XPE$(I);"
230 NEXT J
240 NEXT I
250 GOR%=0:GOSUB 1000
260 NEXT M:GOTO 1150
1000 'UCAK GORUNTUSU ALT PROGRAMI
1010 R1=1*M:R2=2*M:R3=3*M:R4=4*M:R6=6*M:R12=12*M:R18=18*M
1020 X=MX-R3:Y=MY-R1
1030 LINE(X,Y)-STEP(-R1,+R2),GOR%,B
1040 LINE(X,Y)-STEP(+R3,+R4),GOR%
1050 LINE(X,Y)-STEP(+R3,+R4),GOR%
1060 LINE(X,Y)-STEP(+R12,+R2),GOR%,B
1070 LINE(X,Y)-STEP(-R18,+0):LINE(X,Y)-STEP(R2,+R3),GOR%
1080 LINE(X,Y)-STEP(+R2,+0),GOR%
1090 LINE(X,Y)-STEP(+R2,-R3),GOR%
1100 LINE(X,Y)-STEP(-R3,+R6):LINE(X,Y)-STEP(-R4,+0),GOR%
1110 LINE(X,Y)-STEP(+R4,-R3):LINE(X,Y)-STEP(+0,+R3),GOR%
1120 LINE(X,Y)-STEP(+R4,+O),GOR%
1130 LINE(MX-R1,MY-R3)-STEP(+R2,+R1),GOR%,BF
1140 RETURN
1150 Y$=INKEY$:IF Y$="" GOTO 1150
1160 SCREEN 0:END
